<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lchli.studydiscuss">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">

        <meta-data
            android:name=".MyGlideModule"
            android:value="GlideModule"
            tools:node="remove" />

        <activity
            android:name=".SplashActivity"
            android:windowSoftInputMode="adjustPan">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <activity
            android:name=".bm.home.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".bm.note.activity.EditNoteActivity"
            android:launchMode="standard" />

        <activity
            android:name=".bm.note.activity.LocalNoteDetailActivity"
            android:launchMode="standard" />

        <activity
            android:name=".bm.note.activity.ImageGalleryActivity"
            android:launchMode="standard" />

        <activity
            android:name=".bm.note.activity.CloudNoteDetailActivity"
            android:launchMode="standard" />

        <activity
            android:name=".bm.hotfixTinker.TinkerPatchActivity"
            android:launchMode="standard" />

        <service android:name=".bm.hotfixTinker.PatchObserverService" />
        <service
            android:name=".bm.hotfixTinker.service.SampleResultService"
            android:exported="false"/>

    </application>

</manifest>
