<resources>

    <!-- Base application theme. -->
    <style name="AnNote_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/titleView_bgColor</item>
        <item name="colorPrimaryDark">@color/titleView_bgColor</item>
        <item name="colorAccent">@color/titleView_bgColor</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:listViewStyle">@style/ListViewStyle</item>

    </style>

    <style name="AnNote_AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AnNote_AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AnNote_AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ListViewStyle">
        <item name="android:listSelector">@drawable/list_item_bg</item>
    </style>

    <style name="AppHLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#ccc</item>
    </style>

    <style name="LoginInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="UserCenterListLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/list_item_bg</item>

    </style>

</resources>
